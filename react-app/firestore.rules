rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // CATEGORIES COLLECTION
    // ========================================
    // Anyone can read categories
    // Only admins can write (for now, set to false)
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ========================================
    // PRODUCTS COLLECTION
    // ========================================
    // Anyone can read products
    // Only admins can write (for now, set to false)
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ========================================
    // PRODUCT ANALYTICS COLLECTION
    // ========================================
    // Anyone can write analytics (tracking)
    // Only admins can read (for reporting)
    match /productAnalytics/{analyticsId} {
      allow read: if false; // Set to true or add admin check later
      allow create: if true; // Anyone can track events
      allow update, delete: if false;
    }
    
    // ========================================
    // WISHLISTS COLLECTION
    // ========================================
    // Users can only access their own wishlist
    match /wishlists/{userId}/items/{productId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // ORDERS COLLECTION (Future)
    // ========================================
    // Users can only access their own orders
    match /orders/{orderId} {
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || 
                      request.auth.token.admin == true);
      allow create: if request.auth != null && 
                       request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.token.admin == true;
      allow delete: if false;
    }
    
    // ========================================
    // USERS COLLECTION (Future)
    // ========================================
    // Users can only access their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // CART COLLECTION (If using Firebase for cart)
    // ========================================
    // Users can only access their own cart
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // REVIEWS COLLECTION (Future)
    // ========================================
    // Anyone can read reviews
    // Only authenticated users can write reviews
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                               request.auth.uid == resource.data.userId;
    }
  }
}
